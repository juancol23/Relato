<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:id="@+id/relative_item_recycler_design"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_recycler_design_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/item_recycler_design_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha=".4"
      />

    <TextView
        android:id="@+id/item_recycler_design_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Los Secretos de Roselí"
        android:textColor="@color/white"
        android:paddingBottom="0dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_recycler_design_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Los Secretos de Roselí"
        android:visibility="gone"
        android:textColor="@color/white"
        android:paddingBottom="50dp"
        android:textSize="15sp" />

</RelativeLayout>

